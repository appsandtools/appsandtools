<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/app_detail"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false"
    android:gravity="center"
    android:orientation="horizontal"
    android:padding="10dp"
    android:visibility="gone"
    android:weightSum="5">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/circle_bg"
            android:backgroundTint="?colorAccent"
            android:elevation="1dp"
            android:padding="10dp"
            android:src="@drawable/ic_star"
            android:tint="@color/white" />

        <TextView
            android:id="@+id/rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_star"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:singleLine="true" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_downloads"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/circle_bg"
            android:backgroundTint="?colorAccent"
            android:elevation="1dp"
            android:padding="10dp"
            android:src="@drawable/ic_download"
            android:tint="@color/white" />

        <TextView
            android:id="@+id/installs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_downloads"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:singleLine="true" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_storage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/circle_bg"
            android:backgroundTint="?colorAccent"
            android:elevation="1dp"
            android:padding="10dp"
            android:src="@drawable/ic_size"
            android:tint="@color/white" />

        <TextView
            android:id="@+id/size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_storage"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:singleLine="true" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/circle_bg"
            android:backgroundTint="?colorAccent"
            android:elevation="1dp"
            android:padding="5dp"
            android:tint="@color/white" />

        <TextView
            android:id="@+id/category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_category"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:singleLine="true" />
    </RelativeLayout>

</LinearLayout>